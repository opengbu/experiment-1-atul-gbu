// Roll no-19/BHP/005
// to find the largest of three numbers


#include <iostream>
using namespace std;
int main()
{    
    float x1, x2, x3;
    cout<<"give the value of x1  ";
    cin>>x1;
    
    cout<<"give the value of x2  ";
    cin>>x2;
    
    cout<< "give the value of x3  ";
    cin>>x3;
    
    if(x1 >= x2 && x1 >= x3)
    {
        cout << "Largest number: " << x1;
    }
    if(x2 >= x1 && x2 >= x3)
    {
        cout << "Largest number: " << x2;
    }
    if(x3 >= x1 && x3 >= x2) {
        cout << "Largest number is  " << x3;
    }
    return 0;
}
